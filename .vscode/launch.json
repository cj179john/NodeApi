  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeVersion": "9.11.1",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/routesHandlers/tokenHandler.spec.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "runtimeVersion": "9.11.1",
      "name": "Launch Program",
			"program": "${workspaceFolder}/bin/www.js",
			"cwd": "${workspaceFolder}"
    }
  ]
}